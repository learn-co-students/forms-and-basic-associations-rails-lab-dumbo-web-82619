<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br>
  <%= f.label :genre_id %><br>
  <%= f.collection_select :genre_id, @genres, :id, :name %><br>
  <%= f.label :notes %><br>
  <input type="text" id="song_notes_1" name="song[note_contents][]"><br>
  <input type="text" id="song_notes_2" name="song[note_contents][]"><br>
  <br>

  <%= f.submit %>
<% end %>


